/**app.wxss**/
@import "./static/iconfont/iconfont.wxss";

page {
  --white-color: #ffffff;
  --black-color: #000000;
  --red-color: #d22a2a;
  --yellow-color: #f7b500;
  --green-color: #00737f;
  --green-light-color: #8cc237;
  --orange-color: #fa6400;
  --grey-color: #d6d6d6;
  --cyan-color: #50c8c8;

  --line-color: var(--grey-color);

  --day-default-color: var(--black-color);
  --day-select-color: var(--white-color);
  --day-disable-color: #00000033;

  --day-weekend-color: var(--red-color);
  --day-disable-weekend-color: #dc101033;

  --week-default-color: var(--cyan-color);
  --week-weekend-color: var(--red-color);

  --day-bg-color: #ffffff00;
  --day-bg-today-color: var(--red-color);
  --day-bg-select-color: var(--green-light-color);
}


view {
  display: flex;
  flex-direction: column;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /* box-sizing: border-box; */
}

.line {
  width: 100%;
  height: 1px;
  background-color: var(--line-color);
}