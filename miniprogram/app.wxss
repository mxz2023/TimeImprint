/**app.wxss**/
page {
  --yellow-color: #F7B500;
  --green-color: #00737F;
  --orange-color: #FA6400;

  --line-color: rgb(214, 214, 214);

  --day-default-color: rgb(0, 0, 0);
  --day-select-color: rgb(256, 256, 256);
  --day-disable-color: rgba(0, 0, 0, 0.2);

  --day-weekend-color: rgb(220, 16, 16);
  --day-disable-weekend-color: rgb(220, 16, 16, 0.2);

  --week-default-color: rgb(80, 200, 200);
  --week-weekend-color: rgb(210, 42, 42);

  --day-bg-color: rgba(256, 256, 256, 0);
  --day-bg-today-color: rgb(210, 42, 42);
  --day-bg-select-color: rgb(140, 194, 55);
}


view {
  display: flex;
  flex-direction: column;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /* box-sizing: border-box; */
}

.line {
  width: 100%;
  height: 1px;
  background-color: var(--line-color);
}