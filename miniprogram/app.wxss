/**app.wxss**/

page {
  --white-color: #ffffff;
  --black-color: #000000;

  --blue-color: #618dff;
  --red-color: #f6685d;
  --orange-color: #e37318;
  --green-color: #2ba471;
  
  --cyan-color: #41b8f2;
  --purple-color: #c69cff;
  --yellow-color: #f5ba18;
  --pink-color: #ff79cd;

  --grey-color: #c6c6c6;

  --grey1-color: #f3f3f3;
  --grey5-color: #c6c6c6;
  --grey10-color: #4b4b4b;

  --view-background-color: var(--white-color)
  --line-color: var(--grey-color);

  --day-default-color: var(--black-color);
  --day-select-color: var(--white-color);
  --day-disable-color: #00000033;

  --day-weekend-color: var(--red-color);
  --day-disable-weekend-color: #dc101033;

  --week-default-color: var(--green-color);
  --week-weekend-color: var(--red-color);

  --day-bg-color: #ffffff00;
  --day-bg-today-color: var(--red-color);
  --day-bg-select-color: var(--blue-color);

  --font-title1: 12px;
  --font-title2: 16px;
  --font-title3: 24px;
  --font-title4: 36px;
  
  --font-weight-bold: 600;
  --font-weight-normal: 400;
  
  height: 100vh;
  display: flex;
  flex-direction: column;

  /* 解决page父视图不滚动 */
  overflow: hidden;
}

.mBox {
  background-color: var(--white-color);
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.mView {
  display: flex;
  box-sizing: border-box;
  overflow: hidden;
}

.mContent {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
