<!--pages/main/index.wxml-->
<view class="container main">
  <wxs src='./index.wxs' module="utils"></wxs>

  <view class="view.week"
    wx:for="{{ weeks }}" wx:key="*this">
    <view class="text.week" style="color: {{item.color}};">
      {{ item.text }}
    </view>
  </view>
  
  <view class="line" style="margin-bottom: 10px"></view>

  <view class="view.date" style="background-color: {{item.bgColor}}"
    wx:for="{{ gridListDays }}" wx:key="*this">
    <view class="text.date" style="color: {{item.color}}">{{ item.title1 }}</view>
    <view class="text.date.sub" style="color: {{item.color}}">{{ item.title2 }}</view>
  </view>
  
  <view class="line" style="margin-top: 10px"></view>
</view>