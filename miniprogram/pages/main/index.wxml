<!--pages/main/index.wxml-->
<view class="container main">
  <wxs src='./index.wxs' module="utils"></wxs>
  <view class="week-view"
    wx:for="{{ weeks }}" wx:key="*this">
    <view class="week-text">{{ item }}</view>
  </view>
  
  <view class="date-view" style="background-color: {{item.isCurrentMonth ? (item.isCurrentDay ? 'deeppink' : 'darkorange') : 'darkgrey'}}"
    wx:for="{{ gridListDays }}" wx:key="*this">
    <view class="date-text">{{ item.text }}</view>
  </view>
</view>