/* pages/main/index.wxss */
.main {
  height: 100vh;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: flex-start;
  align-items: flex-start;
}

.item-view {
  /* background-color: red; */
  border-radius: 5px;
  border: 1px solid red;
  flex-basis: calc(100% / 7);
  aspect-ratio: 1 / 1;
  margin-top: 4px;
  margin-left: 4px;
  justify-content: center;
  align-items: center;
  align-content:center;
}

.item-text {
  font-size: 1rem;
  color: cadetblue;
}