/* pages/main/index.wxss */
.main {
  padding-left: 5px;
  padding-right: 5px;
  height: 100vh;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: flex-start;
}

.view-header {
  display: flex;
  flex-direction: row;
  /* background-color: red; */
  height: 3rem;
  width: 100%;
}

.view-header-date {
  margin: 0;
  background-color:burlywood;
  border-radius: 5px;
  width: 3rem;
  height: 3rem;
  align-items: center;
  justify-content: center;
}

.view-header-detail {
  flex-direction: column;
  margin-left: 10px;
  align-items: flex-start;
  justify-content: center;
  flex-grow: 1;
}

.view-header-opt {
  flex-direction: row;
  margin-left: 10px;
  align-items: center;
}

.view-week {
  border-radius: 5px;
  aspect-ratio: 1 / 1;
  width: calc(((100% - 4px) / 7) - 4px);
  margin-top: 4px;
  margin-left: 4px;
  justify-content: center;
  align-items: center;
  align-content:center;
}

.scroll-view {
  width: 100%;
  height: 240px;
  white-space: nowrap
}

.scroll-view-item {
  display: inline-block;
}

.view-main {
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  height: 100%;
  align-content: space-between;
}

.view-date {
  flex-direction: column;
  border-radius: 10px;
  /* aspect-ratio: 1 / 1; */
  width: calc(((100% - 4px) / 7) - 4px);
  height: calc(100% / 6);
  margin-top: 4px;
  margin-left: 4px;
  justify-content: center;
  align-items: center;
  align-content:center;
}

.text-week {
  font-size: 12px;
}

.text-date {
  font-size: 16px;
  font-weight: 600;
}

.text-date-sub {
  font-size: 8px;
  font-weight: 400;
}

.text-header-date {
  font-size: 20px;
  font-weight: 600;
}

.text-header-detail {
  font-size: 12px;
}

.text-header-opt-item {
  width: 32px;
  height: 32px;
}