/* pages/main/index.wxss */

.nav-view {
  background-color: white;
  justify-content: flex-end;
}

.nav-view-title {
  margin-left: 1rem;
  margin-bottom: 10px;
  font-size: 1.5rem;
}

.header-view {
  margin-left: 1rem;
  margin-bottom: 10px;
  font-size: 2rem;
}

.main {
  padding-left: 1rem;
  padding-right: 1rem;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: flex-start;
}

.view-header {
  display: flex;
  flex-direction: row;
  /* background-color: red; */
  height: 5rem;
  width: 100%;
}

.view-header-date {
  margin: 0;
  background-color: burlywood;
  /* background-image: linear-gradient(burlywood 20%, white 90%, burlywood); */
  border-radius: 5px;
  width: 4rem;
  height: 5rem;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.view-header-detail {
  flex-direction: column;
  margin-left: 10px;
  align-items: flex-start;
  justify-content: space-between;
  flex-grow: 1;
}

.view-header-detail-top {
  justify-content: flex-start;
  height: 3rem;
  /* width: 10rem; */
  /* background-color: chartreuse; */
}

.view-header-detail-bottom {
  flex-direction: row;
  flex-grow: 1;
  height: 2rem;
}

.view-header-opt {
  margin-left: 10px;
  margin-right: 10px;
  justify-content: flex-end;
  flex-shrink: 0;
  width: 6rem;
}

.view-header-opt-top {
  flex-direction: row;
  align-items: center;
  flex-shrink: 0;
}

.view-header-opt-bottom {
  /* flex-direction: row; */
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  border-radius: 5px;
  background-color: cadetblue;
  /* background-image: linear-gradient(cadetblue 20%, white 90%, cadetblue); */
  padding-left: 3px;
  padding-right: 3px;
  margin-top: 5px;
}

.view-header-opt-item {
  width: 2rem;
  aspect-ratio: 1 / 1;
}

.view-today {
  width: 1.3rem;
  aspect-ratio: 1 / 1;
  justify-content: center;
  align-items: center;
  background-color: var(--day-bg-today-color);
  border-radius: 3px;
  flex-shrink: 0;
  margin-left: 3px;
  margin-right: 3px;
}

.view-week {
  width: calc(100% / 7 - 0.2px);
  height: 2rem;
  justify-content: center;
  align-items: center;
  align-content:center;
}

.swiper-view {
  width: 100%;
  height: 15rem;
  white-space: nowrap;
}

.swiper-view-item {
  display: inline-block;
}

.view-main {
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  height: 100%;
  align-content: space-between;
}

.view-date {
  flex-direction: column;
  border-radius: 10px;
  width: calc(100% / 7 - 0.2px);
  justify-content: center;
  align-items: center;
  align-content: center;
}

.text-week {
  text-align: center;
  font-size: 1rem;
}

.text-date {
  font-size: 1.2rem;
  font-weight: 600;
}

.text-date-sub {
  font-size: 0.6rem;
  font-weight: 400;
  text-align: center;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 100%;
}

.text-header-date {
  font-size: 3rem;
  font-weight: 600;
  color: var(--day-select-color);
}

.text-header-date-sub {
  font-size: 0.8rem;
  font-weight: 600;
  color: var(--day-select-color);
  white-space: normal;
}

.text-header-detail1 {
  font-size: 1rem;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-header-detail2 {
  margin-top: 0.2rem;
  font-size: 0.8rem;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: var(--day-bg-today-color);
}

.text-today {
  font-size: 0.8rem;
  color: var(--day-select-color);
}

.text-header-opt-bottom {
  color: aliceblue;
}