/* pages/main/index.wxss */
.main {
  padding-left: 5px;
  padding-right: 5px;
  height: 100vh;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: flex-start;
  align-items: flex-start;
}

.view.week {
  border-radius: 5px;
  aspect-ratio: 1 / 1;
  width: calc(((100% - 4px) / 7) - 4px);
  margin-top: 4px;
  margin-left: 4px;
  justify-content: center;
  align-items: center;
  align-content:center;
}

.text.week {
  font-size: 12px;
}

.view.date {
  flex-direction: column;
  border-radius: 10px;
  aspect-ratio: 1 / 1;
  width: calc(((100% - 4px) / 7) - 4px);
  margin-top: 4px;
  margin-left: 4px;
  justify-content: center;
  align-items: center;
  align-content:center;
}

.text.date {
  font-size: 16px;
  font-weight: 600;
}

.text.date.sub {
  font-size: 8px;
  font-weight: 400;
}