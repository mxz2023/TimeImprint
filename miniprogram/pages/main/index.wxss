/* pages/main/index.wxss */

.nav-view {
  background-color: white;
  justify-content: flex-end;
}

.nav-view-title {
  margin-left: 1rem;
  margin-bottom: 10px;
  font-size: 1.5rem;
}

.header-view {
  margin-left: 1rem;
  margin-bottom: 10px;
  font-size: 2rem;
}

.main {
  padding-left: 1rem;
  padding-right: 1rem;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: flex-start;
}

.view-header {
  display: flex;
  flex-direction: row;
  /* background-color: red; */
  height: 3rem;
  width: 100%;
}

.view-header-date {
  margin: 0;
  background-color:burlywood;
  border-radius: 5px;
  width: 3rem;
  height: 3rem;
  align-items: center;
  justify-content: center;
}

.view-header-detail {
  flex-direction: column;
  margin-left: 10px;
  align-items: flex-start;
  justify-content: space-between;
  flex-grow: 1;
}

.view-header-opt {
  flex-direction: row;
  margin-left: 10px;
  align-items: center;
  flex-shrink: 0;
}

.view-header-opt-item {
  width: 32px;
  height: 32px;
}

.view-today {
  width: 24px;
  height: 24px;
  justify-content: center;
  align-items: center;
  background-color: var(--day-bg-today-color);
  border-radius: 12px;
  flex-shrink: 0;
}

.view-week {
  border-radius: 5px;
  aspect-ratio: 1 / 1;
  width: calc(100% / 7 - 0.2px);
  justify-content: center;
  align-items: center;
  align-content:center;
}

.swiper-view {
  width: 100%;
  height: 15rem;
  white-space: nowrap;
}

.swiper-view-item {
  display: inline-block;
}

.view-main {
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  height: 100%;
  align-content: space-between;
}

.view-date {
  flex-direction: column;
  border-radius: 10px;
  /* aspect-ratio: 1 / 1; */
  width: calc(100% / 7 - 0.2px);
  /* height: calc(100% / 6); */
  justify-content: center;
  align-items: center;
  align-content: center;
}

.text-week {
  font-size: 1rem;
}

.text-date {
  font-size: 1.2rem;
  font-weight: 600;
}

.text-date-sub {
  font-size: 0.6rem;
  font-weight: 400;
  text-align: center;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.text-header-date {
  font-size: 2rem;
  font-weight: 600;
}

.text-header-date-sub {
  font-size: 0.5rem;
  font-weight: 400;
}

.text-header-detail1 {
  font-size: 1rem;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.text-header-detail2 {
  font-size: 0.8rem;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: var(--day-bg-today-color);
}

.text-today {
  font-size: 12px;
  color: var(--day-select-color);
}