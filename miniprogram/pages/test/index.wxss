.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f5f5f5;
}

.logo {
  width: 100px;
  height: 100px;
  margin-bottom: 20px;
  border-radius: 10px;
}

.btn {
  width: 80%;
  height: 40px;
  margin-top: 20px;
  border: none;
  border-radius: 5px;
  background-color: #14913d;
  color: #fff;
  font-size: 16px;
}

.agreement {
  margin-top: 20px;
  font-size: 12px;
  color: #666;
}

.agreement a {
  color: #007aff;
}