/* pages/tally/index.wxss */

.main-box {
  flex-direction: row;
  flex-wrap: wrap;
  height: 100vh;
  align-content: flex-start;
  /* justify-content: space-evenly; */
  padding: 1rem;
}

.view-item-box {
  width: calc(100% / 6);
  aspect-ratio: 1 / 1;
  /* background-color: blueviolet; */
  border-radius: 1rem;
  align-items: center;
  justify-content: center;
}

.view-item {
  width: 3rem;
  aspect-ratio: 1 / 1;
  background-color: aqua;
  border-radius: 1rem;
  align-items: center;
  justify-content: center;
}

.view-popup-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.2);
}

.view-popup-content {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 20rem;
  background-color: #fff;
  border-radius: 20px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
  padding: 20px;
  font-size: 16px;
  line-height: 1.5;
  text-align: center;
}


.text-item {
  font-size: 12px;
}