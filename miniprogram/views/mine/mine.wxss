/* views/mine/mine.wxss */

.mContent {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.view-header {
  background-color: coral;
  width: 100%;
  height: 10rem;
}

.view-user {
  padding: 12px;
  flex-direction: row;
  align-items: center;
  justify-content: start;
}

.view-user-icon {
  width: 48px;
  height: 48px;
  background-color: darkgray;
  border-radius: 24px;
}

.view-user-nickname {
  margin-left: 12px;
}

.view-content {
  background-color: cornflowerblue;
  width: 100%;
  height: 6rem;
}

.view-list {
  /* background-color: crimson; */
  width: 100%;
  flex-direction: column;
  flex-grow: 1;
}

.scrollarea{
  flex: 1;
  overflow-y: auto;
}

.view-t-cell {
  flex-direction: row;
}