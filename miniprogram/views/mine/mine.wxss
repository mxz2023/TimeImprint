/* views/mine/mine.wxss */

.mContent {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.view-header {
  background-color: var(--grey1-color);
  width: 100%;
  /* height: 20rem; */
  padding-top: calc(env(safe-area-inset-top) + 44px);
  padding-bottom: 80px;
}

.view-user {
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-radius: 5px;
  padding: 12px;
}

.avatar-wrapper {
  flex-direction: row;
  margin-left: 12px;
}

.avatar {
  width: 56px;
  height: 56px;
  border-radius: 6px;
}

.nickname-wrapper {
  margin-left: 12px;
  justify-content: space-around;
}

.text-user-nickname {
  font-size: 24px;
  font-weight: 600;
  color:var(--grey10-color);
}

.text-user-id {
  color: var(--grey5-color);
  font-size: 12px;
}

.setting-wrapper {
  margin-right: 12px;
}

.view-content {
  /* background-color: var(--yellow-color); */
  flex-direction: row;
  flex-grow: 1;
  border-radius: 24px 24px 0px 0px;
  justify-content: space-around;
  margin-top: 12px;
}

.view-part {
  width: 100px;
  justify-content: center;
  align-items: center;
}

.text-number {
  color:var(--grey10-color);
  font-size: 28px;
  font-weight: 600;
}

.text-title {
  color: var(--grey5-color);
  font-size: 14px;
}

.view-list {
  background-color: var(--white-color);
  width: 100%;
  flex-direction: column;
  flex-grow: 1;
  margin-top: -48px;
  padding-top: 48px;
  border-radius: 48px 48px 0 0;
  overflow: hidden;
}

.scrollarea{
  flex: 1;
  overflow-y: auto;
}

.view-t-cell {
  flex-direction: row;
}