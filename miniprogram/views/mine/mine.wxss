/* views/mine/mine.wxss */

.mContent {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.view-header {
  background-color: var(--grey1-color);
  width: 100%;
  height: 20rem;
  padding-top: calc(env(safe-area-inset-top) + 44px);
}

.view-user {
  background-color: white;
  position: absolute;
  left: 12px;
  right: 12px;
  height: 100px;
  padding: 12px;
  flex-direction: row;
  align-items: center;
  justify-content: start;
  border-radius: 5px;
}

.view-nick {
  margin-left: 12px;
  justify-content: space-around;
  align-self: stretch;
}

.text-user-nickname {
  font-size: 24px;
  font-weight: 600;
  color:var(--grey10-color);
}

.text-user-id {
  font-size: 12px;
  color: var(--grey5-color);
}

.view-content {
  background-color: var(--yellow-color);
  margin-top: 70px;
  padding-top: 30px;
  flex-direction: row;
  flex-grow: 1;
  border-radius: 12px 12px 0px 0px;
  justify-content: space-around;
}

.view-part {
  width: 100px;
  justify-content: center;
  align-items: center;
}

.text-number {
  color: white;
  font-size: 28px;
  font-weight: 600;
}

.text-title {
  color: white;
  font-size: 14px;
}

.view-list {
  /* background-color: crimson; */
  width: 100%;
  flex-direction: column;
  flex-grow: 1;
}

.scrollarea{
  flex: 1;
  overflow-y: auto;
}

.view-t-cell {
  flex-direction: row;
}