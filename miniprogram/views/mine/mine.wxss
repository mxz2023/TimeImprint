/* views/mine/mine.wxss */

.view-header {
  background-color: coral;
  width: 100%;
  height: 5rem;
}

.view-user {
  padding: 12px;
  flex-direction: row;
  align-items: center;
  justify-content: start;
}

.view-user-icon {
  width: 48px;
  height: 48px;
  background-color: darkgray;
  border-radius: 24px;
}

.view-user-nickname {
  margin-left: 12px;
}

.view-content {
  background-color: cornflowerblue;
  width: 100%;
  height: 3rem;
}

.view-list {
  background-color: crimson;
  width: 100%;
  flex-direction: column;
  flex-grow: 1;
}
