/* views/mine/mine.wxss */

.mView {
  display: flex;
  box-sizing: border-box;
  overflow: hidden;
}

.mBox {
  width: 100%;
  height: 100vh;
  background-color: var(--white-color);
  flex-direction: column;
}

.view-header {
  background-color: coral;
  width: 100%;
  height: 5rem;

}

.view-content {
  background-color: cornflowerblue;
  width: 100%;
  height: 3rem;

}

.view-list {
  background-color: crimson;
  width: 100%;
  flex-direction: column;
  flex-grow: 1;

}